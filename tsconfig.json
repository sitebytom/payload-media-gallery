{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "lib": [
            "dom",
            "es2018",
            "esnext"
        ],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "@payload-config": [
                "./dev/src/payload.config.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}